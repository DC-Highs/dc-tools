{
    "name": "@dchighs/dc-tools",
    "private": true,
    "version": "0.8.0",
    "type": "commonjs",
    "main": "./electron/dist/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "electron:compile": "tsc -p electron/tsconfig.json",
        "electron:dev": "npm run electron:compile && concurrently \"cross-env NODE_ENV=development npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
        "electron:build": "npm run build && npm run electron:compile && electron-builder",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\""
    },
    "build": {
        "appId": "dev.marcuth.dchighs.dc-tools",
        "productName": "DC Tools",
        "files": [
            "dist/**/*",
            "electron/dist/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        }
    },
    "dependencies": {
        "@base-ui/react": "^1.1.0",
        "@dchighs/dc-assets": "^0.4.0",
        "@dchighs/dc-core": "^0.2.0",
        "@fontsource-variable/outfit": "^5.2.8",
        "@hookform/resolvers": "^5.2.2",
        "@tailwindcss/vite": "^4.1.18",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "framer-motion": "^12.26.2",
        "lucide-react": "^0.562.0",
        "next-themes": "^0.4.6",
        "radix-ui": "^1.4.3",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-hook-form": "^7.71.1",
        "react-icons": "^5.5.0",
        "react-router-dom": "^6.30.3",
        "shadcn": "^3.7.0",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.18",
        "tw-animate-css": "^1.4.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/electron": "^1.4.38",
        "@types/node": "^24.10.9",
        "@types/react": "^19.2.5",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.1",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^40.0.0",
        "electron-builder": "^26.4.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "prettier": "^3.8.0",
        "prettier-plugin-sort-imports": "^1.8.9",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.4",
        "vite": "^7.2.4",
        "wait-on": "^9.0.3"
    }
}
